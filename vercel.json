{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/track.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/track",
      "destination": "/api/track.js"
    },
    {
      "source": "/stats",
      "destination": "/stats.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
